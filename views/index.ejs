
    <%- include('header') %>
    <div class="text-center stand-margin">
      <span class="page-title"
        ><i
          class="fa fa-tags"
          style="font-size: 30px; color: #333; padding-right: 5px"
        ></i
        >Multiple Qr Generator</span
      >
    </div>

    <div
      class="container col-sm-8 temp_div shadow-lg p-3 mb-5 bg-white rounded"
    >
      <form action="/scan" method="POST" class="form">
        <%- include('form-body') %>
        <div class="mb-3 row">
          <label for="drum_no" class="col-sm-2 col-form-label">Drum No</label>
          <div class="col-sm-5">
            <input
              type="number"
              class="form-control"
              name="drum_from"
              id="drum_from"
              min="1"
              placeholder="From"
              value="1"
              required
            />
            <span class="info-data">Minimum value should be 1</span>
          </div>
          <div class="col-sm-5">
            <input
              type="number"
              class="form-control"
              name="drum_to"
              id="drum_to"
              min="1"
              placeholder="To"
              required
            />
          </div>
        </div>
        <%- include('companyInfo-form') %>
        <hr />
        <div class="text-center">
          <button type="submit" class="btn btn-primary">
            Generator QR Code
          </button>
        </div>
      </form>
    </div>

    <%- include('footer') %>
  </body>
</html>
